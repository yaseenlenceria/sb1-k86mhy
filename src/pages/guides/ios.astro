---
import Layout from '../../layouts/Layout.astro';

const schema = {
  "@context": "https://schema.org",
  "@type": "HowTo",
  "name": "How to Download TikTok Videos on iPhone/iPad",
  "description": "Step-by-step guide for downloading TikTok videos on iOS devices using SaveDownloadTT.",
  "step": [
    {
      "@type": "HowToStep",
      "name": "Open TikTok",
      "text": "Launch the TikTok app on your iOS device and find the video you want to download."
    },
    {
      "@type": "HowToStep",
      "name": "Copy Video Link",
      "text": "Tap the Share button and select 'Copy Link' from the sharing options."
    },
    {
      "@type": "HowToStep",
      "name": "Visit SaveDownloadTT",
      "text": "Open Safari and go to SaveDownloadTT.com."
    },
    {
      "@type": "HowToStep",
      "name": "Download Video",
      "text": "Paste the copied link and tap Download to save your video without watermark."
    }
  ]
};
---

<Layout
  title="How to Download TikTok Videos on iPhone/iPad | SaveDownloadTT"
  description="Learn how to download TikTok videos on iOS devices. Step-by-step guide for saving TikTok videos without watermark using SaveDownloadTT."
>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <main class="pt-32 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-6">
        How to Download TikTok Videos on <span class="bg-gradient-to-r from-purple-500 to-pink-500 text-transparent bg-clip-text">iPhone/iPad</span>
      </h1>

      <div class="mt-12 space-y-12">
        <section class="bg-white/5 rounded-xl p-8 backdrop-blur-lg">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-2xl font-bold mb-4">Step 1: Open TikTok</h2>
              <p class="text-gray-300">Launch the TikTok app on your iOS device and find the video you want to download.</p>
            </div>
            <div class="bg-black/20 rounded-lg p-4">
              <img 
                src="/images/guides/ios-tiktok-app.webp" 
                alt="TikTok app on iOS" 
                class="rounded-lg w-full"
                width="300"
                height="600"
              />
            </div>
          </div>
        </section>

        <section class="bg-white/5 rounded-xl p-8 backdrop-blur-lg">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-2xl font-bold mb-4">Step 2: Copy Video Link</h2>
              <p class="text-gray-300">Tap the Share button (arrow icon) and select "Copy Link" from the sharing options.</p>
            </div>
            <div class="bg-black/20 rounded-lg p-4">
              <img 
                src="/images/guides/ios-share-button.webp" 
                alt="Share button in TikTok iOS" 
                class="rounded-lg w-full"
                width="300"
                height="600"
              />
            </div>
          </div>
        </section>

        <section class="bg-white/5 rounded-xl p-8 backdrop-blur-lg">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-2xl font-bold mb-4">Step 3: Visit SaveDownloadTT</h2>
              <p class="text-gray-300">Open Safari and navigate to SaveDownloadTT.com.</p>
            </div>
            <div class="bg-black/20 rounded-lg p-4">
              <img 
                src="/images/guides/ios-safari.webp" 
                alt="Safari browser on iOS" 
                class="rounded-lg w-full"
                width="300"
                height="600"
              />
            </div>
          </div>
        </section>

        <section class="bg-white/5 rounded-xl p-8 backdrop-blur-lg">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div>
              <h2 class="text-2xl font-bold mb-4">Step 4: Download Video</h2>
              <p class="text-gray-300">Paste the copied link into the download box and tap the Download button. Your video will be saved to your Photos app.</p>
            </div>
            <div class="bg-black/20 rounded-lg p-4">
              <img 
                src="/images/guides/ios-download.webp" 
                alt="Downloading video on iOS" 
                class="rounded-lg w-full"
                width="300"
                height="600"
              />
            </div>
          </div>
        </section>

        <section class="bg-white/5 rounded-xl p-8 backdrop-blur-lg">
          <h2 class="text-2xl font-bold mb-4">Tips for iOS Users</h2>
          <ul class="space-y-4 text-gray-300">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Use Safari browser for best experience on iOS</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Allow permissions to save videos to Photos</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span>Videos are saved directly to your Photos app</span>
            </li>
          </ul>
        </section>
      </div>
    </div>
  </main>
</Layout>