---
interface Props {
  name: string;
  avatar: string;
  role: string;
  date: string;
}

const { name, avatar, role, date } = Astro.props;
---

<div class="flex items-center gap-4 mb-8">
  <img 
    src={avatar} 
    alt={`${name}'s avatar`} 
    class="w-12 h-12 rounded-full"
    width="48"
    height="48"
  />
  <div>
    <div class="font-semibold text-lg">{name}</div>
    <div class="text-gray-400 text-sm">{role}</div>
    <time datetime={date} class="text-sm text-gray-400">
      {new Date(date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </div>
</div>